{
  "apps": [
    {
      "name": "live-error-display",
      "script": "server.js",
      "cwd": "/opt/live-error-display",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "PORT": "8080"
      },
      "log_file": "/var/log/live-error-display-app.log",
      "out_file": "/var/log/live-error-display-out.log",
      "error_file": "/var/log/live-error-display-error.log",
      "pid_file": "/var/run/live-error-display.pid",
      "restart_delay": 3000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "autorestart": true,
      "merge_logs": true,
      "time": true
    }
  ]
}
